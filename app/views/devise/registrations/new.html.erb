<h2>Sign Up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.input :first_name, label: "First Name", required: false %>
  <%= f.input :last_name, label: "Last Name", required: false %>
  <%= f.input :email %>
  <%= f.input :cal_type, label: "Calendar Type", :collection => ['Outlook', 'GCal', 'iCal', 'Thunderbird'], as: :radio_buttons %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <div class="form-actions">
  	<button type="submit" class="btn btn-primary">
      <i class="icon-thumbs-up"></i> Sign Up
    </button>
  </div>
<% end %>

<%= render "devise/shared/links" %>
