<h2>Forgot your password?</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :email %>

  <div class="form-actions">
  	<button type="submit" class="btn btn-info">
  		<i class="icon-plane"></i> Send me reset password instructions
  	</button>
  </div>
<% end %>

<%= render "devise/shared/links" %>
