source 'https://rubygems.org'

gem 'rails'
gem 'jquery-rails'
gem 'devise'
gem 'simple_form'

group :production do
	gem 'pg'
end

group :development, :test do
	gem 'sqlite3'
end

# Gems used only for assets and not required in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'bootstrap-sass'
  gem 'font-awesome-sass-rails'
end

